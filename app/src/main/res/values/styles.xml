<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_primary</item>
        <item name="colorPrimaryVariant">@color/light_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_primary</item>
        <item name="colorSecondaryVariant">@color/light_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- divider -->
        <item name="android:listDivider">@drawable/divider_gray</item>

        <!-- set windowActionBar to false in your theme to use a Toolbar instead -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- color accent -->
        <item name="colorAccent">@color/light_blue_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Text colors -->
       <item name="android:textColorPrimary">@color/white</item>

        <!-- divider -->
        <item name="android:listDivider">@drawable/divider_gray</item>

        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>
